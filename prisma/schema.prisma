generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Intern {
  id         String     @id @default(uuid())
  name       String
  gender     String
  age        Int
  cpf        String     @unique
  phone      String
  email      String     @unique
  course     String
  university String
  salary     Decimal
  role       String
  onWork     Boolean
  getInHour  String
  getOutHour String
  startDate  DateTime
  endDate    DateTime
  delayed    Int
  absent     Int
  rfIdCard   String
  Address    Address?
  Activity   Activity[]
}

model Address {
  id           String @id @default(uuid())
  street       String
  cep          String
  houseNumber  String
  neighborhood String
  city         String
  internId     String @unique
  intern       Intern @relation(fields: [internId], references: [id])
}

model Activity {
  id             String   @id @default(uuid())
  title          String
  description    String
  dueDate        DateTime
  status         String
  internsIdScore Json
  Intern         Intern?  @relation(fields: [internId], references: [id])
  internId       String?
}
